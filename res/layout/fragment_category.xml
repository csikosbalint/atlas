<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:columnCount="2"
    android:gravity="left"
    android:orientation="vertical" >

    <hu.fnf.devel.atlas.backend.CategoryView
        android:id="@+id/catview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="0" />
    <!--  -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_margin="5dip"
        android:layout_row="0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/summaryIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/summaryOutcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="right|top"
        android:layout_row="0"
        android:gravity="right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:onClick="onTrendSelectClick" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trends" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:src="@android:drawable/ic_menu_today"
            android:onClick="onMonthClick" />

        <TextView
            android:id="@+id/reqmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="actmonth" />

    </LinearLayout>

</GridLayout>